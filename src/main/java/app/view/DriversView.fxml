<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="app.presenter.DriversViewPresenter"
            prefHeight="400.0" prefWidth="600.0">
    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="15" bottom="12" left="15" right="12" />
            </padding>
            <TableView fx:id="driverTableView">
                <columns>
                    <TableColumn fx:id="driverName" text="Name" prefWidth="75.0"/>
                    <TableColumn fx:id="driverPhone" text="Phone" prefWidth="75.0"/>
                    <TableColumn fx:id="driverAddress" text="Address" prefWidth="75.0"/>
                    <TableColumn fx:id="driverBirthDay" text="Birth Day" prefWidth="75.0"/>
                    <TableColumn fx:id="driverHireDate" text="Hire Date" prefWidth="75.0"/>
                    <TableColumn fx:id="driverSalary" text="Salary" prefWidth="75.0"/>
                </columns>
            </TableView>
        </VBox>
    </center>
    <right>
        <VBox spacing="10">
            <padding>
                <Insets top="15" bottom="12" left="15" right="12" />
            </padding>
            <Button text="Add" prefWidth="50" onAction="#handleAddButtonAction" fx:id="addButton"/>
            <Button text="Delete" prefWidth="50" onAction="#handleDeleteButtonAction" fx:id="deleteButton"/>
            <Button text="Edit" prefWidth="50" onAction="#handleEditButtonAction" fx:id="editButton"/>
        </VBox>
    </right>

</BorderPane>
