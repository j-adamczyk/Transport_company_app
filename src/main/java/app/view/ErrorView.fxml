<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="app.presenter.ErrorViewPresenter"
            prefHeight="200.0" prefWidth="300.0">

    <center>
        <ScrollPane>
            <content>
                <Label fx:id="errorMessage" wrapText="true" />
            </content>
        </ScrollPane>
    </center>
    <bottom>
        <HBox spacing="20" alignment="BASELINE_RIGHT">
            <padding>
                <Insets top="12" bottom="12" right="12" left="12"/>
            </padding>
            <Button fx:id="acceptButton" onAction="#close" text="Accept" prefWidth="75"/>
        </HBox>
    </bottom>
</BorderPane>
